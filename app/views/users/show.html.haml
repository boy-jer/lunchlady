- title "Users"

%table.vertical.user
  %tr
    %th         Name
    %td.td_12=  @user.name
  %tr
    %th         Email
    %td=        @user.email
  %tr
    %th         Local?
    %td=        @user.is_local ? "Works in office" : "Only occasionally orders"

%table.horizontal.orders
  %tr
    %th.td_4    Meal
    %th.td_4    Restaurant
    %th.td_17   Order
  - @user.orders.each do |order|
    %tr
      %td= link_to_rsrc order.meal
      %td= order.meal.restaurant_name if order.meal
      %td= link_to order.description, [order.meal, order]
      
      
